<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="OpenSteam.Extra"
        Title="OpenSteam Extras" Height="480" Width="450"
        WindowStartupLocation="CenterOwner" Background="Transparent" 
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="1" BorderBrush="#33FFFFFF"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,20,0,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Grid.Effect>

        <Border x:Name="MainBorder" 
                Background="#0F0F0F" 
                CornerRadius="20" 
                BorderThickness="1" 
                BorderBrush="#33FFFFFF"
                ClipToBounds="True">

            <Border.OpacityMask>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Border Background="Black" 
                                CornerRadius="20" 
                                Width="{Binding ActualWidth, ElementName=MainBorder}" 
                                Height="{Binding ActualHeight, ElementName=MainBorder}"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>

            <Grid ClipToBounds="True">
                <Canvas IsHitTestVisible="False" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Ellipse Fill="#1A007ACC" Width="300" Height="300" Canvas.Left="-100" Canvas.Top="-100">
                        <Ellipse.Effect>
                            <BlurEffect Radius="80"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>

                <StackPanel Margin="25">
                    <TextBlock Text="OpenSteam Extras" Foreground="White" FontSize="24" FontWeight="ExtraBold" Margin="0,0,0,5">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="8" Color="#007ACC" ShadowDepth="0" Opacity="0.4"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="InfoVersion" Text=" " Foreground="#66FFFFFF" FontSize="11"/>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden" Height="370" Margin="0,0,0,15" Cursor="ScrollNS">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="#CCCCCC" FontSize="13" LineHeight="20" Margin="0,0,0,20"><Run Text="OpenSteam Extras are tools, &quot;hacks,&quot; bypasses, etc., useful for your games or your Steam environment. The creator of OpenSteam disclaims responsibility for misuse, malware infections, bans, etc., as most of these tools were not developed by me. But they do the job."/></TextBlock>
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" Margin="0,10,0,0" 
                                    BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="SteamCMD (Official)" Foreground="#FF1FFF00" FontWeight="Bold" FontSize="13" Margin="0,0,0,5" MouseDown="Steamcmd" Cursor="Hand"/>
                                    <TextBlock Text="SteamCMD (Steam Console) is the lightweight, official, command-line-based version of the Steam client developed by the Valve Developer Community. Its primary use is to quickly download, install, and update dedicated game servers on Windows and Linux, without requiring a graphical interface." 
                                               TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" Margin="0,10,0,0"
                                BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="NLGL =&gt; RockstarLauncher Bypass" Foreground="#FFF3FF00" FontWeight="Bold" FontSize="13" Margin="0,0,0,5" MouseDown="nlgl" Cursor="Hand"/>
                                    <TextBlock 
                                        TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12" Text="NLGL (Nightlight Game Launcher) It is a tool whose function is to unlock the possibility of playing any Rockstar Games title that requires logging in or having the Rockstar Launcher installed."/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" Margin="0,10,0,0" 
                                BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="CreamInstaller => unlocks any DLC" Foreground="#FFF3FF00" FontWeight="Bold" FontSize="13" Margin="0,0,0,5" MouseDown="craminstaller" Cursor="Hand"/>
                                    <TextBlock Text="Automatic DLC Unlocker Installer and Configuration Generator" 
                                        TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" Margin="0,10,0,0" 
                                BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="Online-fix.me =&gt; Online Games Bypass " Foreground="#FFF3FF00" FontWeight="Bold" FontSize="13" Margin="0,0,0,5" MouseDown="onlinefix" Cursor="Hand"/>
                                    <TextBlock Text="Online-Fix.me is a website that provides guides, patches, and files needed to play online multiplayer video games, including those that have been modified or cracked." 
                                        TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" Margin="0,10,0,0"
                                BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="Steam Achievement Manager => Unlock any achievement" Foreground="Red" FontWeight="Bold" FontSize="13" Margin="0,0,0,5" MouseDown="steamachievementmanager" Cursor="Hand"/>
                                    <TextBlock Text="Steam Achievement Manager (SAM) is a lightweight, portable application used to manage achievements and statistics in the popular PC gaming platform Steam. This application requires the Steam client, a Steam account and network access" 
                                        TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    
                </StackPanel>
            </Grid>
        </Border>
        <Rectangle x:Name="UpperLimit" HorizontalAlignment="Center" Height="2" Margin="0,70,0,0" Stroke="#66FFFFFF" VerticalAlignment="Top" Width="380" RenderTransformOrigin="0.5,0.5" Fill="#66FFFFFF">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.018"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle x:Name="BottomLimit" HorizontalAlignment="Center" Height="2" Margin="0,440,0,0" Stroke="#66FFFFFF" VerticalAlignment="Top" Width="380" RenderTransformOrigin="0.5,0.5" Fill="#66FFFFFF">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.018"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button x:Name="ExitButton" Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
         Width="45" Height="32" Style="{StaticResource ExitButtonStyle}" Click="ExitButton_Click" />
    </Grid>
</Window>