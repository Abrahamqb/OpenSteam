<Window x:Class="OpenSteam.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notificación" Height="100" Width="300" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border Background="#252526" CornerRadius="10" BorderBrush="Black" BorderThickness="1">
        <TextBlock x:Name="TxtMensaje" Foreground="White" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="14" Text="Operación completada"/>
    </Border>
</Window>