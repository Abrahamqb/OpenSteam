<Window x:Class="OpenSteam.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Información de OpenSteam" Height="450" Width="450"
        WindowStartupLocation="CenterOwner" Background="#121212" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="OpenSteam Framework" Foreground="#007ACC" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

            <ScrollViewer VerticalScrollBarVisibility="Hidden" Height="300">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" Foreground="#E0E0E0" FontSize="13" LineHeight="18" Margin="0,0,0,15">
                        OpenSteam es una herramienta de código abierto diseñada para potenciar la libertad del usuario dentro del ecosistema de Steam. A diferencia de las modificaciones superficiales, OpenSteam actúa como una capa de compatibilidad y parcheo que permite inyectar funcionalidades avanzadas.
                    </TextBlock>

                    <TextBlock Text="🛠️ Funcionalidades Principales" Foreground="White" FontSize="15" FontWeight="Bold" Margin="0,5,0,10"/>

                    <Border Background="#1E1E1E" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                        <TextBlock TextWrapping="Wrap" FontSize="12">
                            <Run Text="Library Jailbreak:" Foreground="#007ACC" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="Desbloquea la biblioteca de steam permitiendo jugar juegos que no son tuyos o juegos cargados por Lua de forma nativa." Foreground="#AAAAAA"/>
                        </TextBlock>
                    </Border>

                    <Border Background="#1E1E1E" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                        <TextBlock TextWrapping="Wrap" FontSize="12">
                            <Run Text="LuaLoader:" Foreground="#007ACC" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="Carga archivos Lua de servidores externos para acceder a cualquier título (No DRM). !No funcionan juegos online sin parche Online Fix!" Foreground="#AAAAAA"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Button Content="Cerrar" HorizontalAlignment="Right" Width="100" Height="30" 
                    Background="#252526" Foreground="White" Click="Cerrar_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>