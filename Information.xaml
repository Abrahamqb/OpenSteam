<Window x:Class="OpenSteam.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenSteam Information" Height="480" Width="450"
        WindowStartupLocation="CenterOwner" Background="Transparent" 
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="1" BorderBrush="#33FFFFFF"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Grid.Effect>

        <Border x:Name="MainBorder" 
                Background="#0F0F0F" 
                CornerRadius="20" 
                BorderThickness="1" 
                BorderBrush="#33FFFFFF"
                ClipToBounds="True">

            <Border.OpacityMask>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Border Background="Black" 
                                CornerRadius="20" 
                                Width="{Binding ElementName=MainBorder, Path=ActualWidth}" 
                                Height="{Binding ElementName=MainBorder, Path=ActualHeight}"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>

            <Grid ClipToBounds="True">
                <Canvas IsHitTestVisible="False" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Ellipse Fill="#1A007ACC" Width="300" Height="300" Canvas.Left="-100" Canvas.Top="-100">
                        <Ellipse.Effect>
                            <BlurEffect Radius="80"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>

                <StackPanel Margin="25">
                    <TextBlock Text="OpenSteam Framework" Foreground="White" FontSize="24" FontWeight="ExtraBold" Margin="0,0,0,5">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="8" Color="#007ACC" ShadowDepth="0" Opacity="0.4"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="InfoVersion" Text="Version 2.1 Beta" Foreground="#66FFFFFF" FontSize="11" Margin="0,0,0,20"/>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden" Height="280" Margin="0,0,0,15" Cursor="ScrollNS">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="#CCCCCC" FontSize="13" LineHeight="20" Margin="0,0,0,20">
                                OpenSteam is an open-source tool designed to enhance user freedom within the Steam ecosystem. It acts as a compatibility and patching layer that allows the injection of advanced features.
                            </TextBlock>
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" 
                                BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="Dev" Foreground="#007ACC" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBlock 
                                        TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12" Text="Open source project created by Jbrequi (Abrahamqb) . Github: https://github.com/Abrahamqb/OpenSteam/"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="🛠️ Core Features" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,12,0,12"/>
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" Margin="0,0,0,10" 
                                    BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="Library Jailbreak" Foreground="#007ACC" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBlock Text="Unlocks the Steam library, allowing you to play games natively, including titles loaded via Lua." 
                                               TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="15" Margin="0,0,0,10" 
                                    BorderThickness="1" BorderBrush="#1AFFFFFF" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="LuaLoader" Foreground="#007ACC" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                                    <TextBlock Text="Loads Lua files from external servers to access non-DRM titles. Note: Online play requires an Online Fix patch." 
                                               TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Content="Close" HorizontalAlignment="Right" Width="120" Height="35" 
                            Style="{StaticResource ModernButtonStyle}" Background="#1E1E1E"
                            Click="Cerrar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>