<Window x:Class="OpenSteam.OnlineLua"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Online Lua Store" Height="480" Width="450"
        WindowStartupLocation="CenterOwner" Background="Transparent" 
        WindowStyle="None" 
        AllowsTransparency="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True"
        MouseDown="Window_MouseDown">

    <Grid Margin="10">
        <Grid.Resources>
            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Grid.Effect>

        <Border x:Name="MainBorder" Background="#0F0F0F" CornerRadius="20" BorderThickness="1" BorderBrush="#33FFFFFF" ClipToBounds="True">
            <Border.OpacityMask>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Border Background="Black" CornerRadius="20" 
                                Width="{Binding ElementName=MainBorder, Path=ActualWidth}" 
                                Height="{Binding ElementName=MainBorder, Path=ActualHeight}"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>

            <Grid ClipToBounds="True">
                <Canvas IsHitTestVisible="False" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Ellipse Fill="#1A007ACC" Width="300" Height="300" Canvas.Left="-100" Canvas.Top="-100">
                        <Ellipse.Effect>
                            <BlurEffect Radius="80"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>

                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="STEAM LUA" Foreground="White" FontSize="32" FontWeight="ExtraBold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="15" Color="#007ACC" Opacity="0.5" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="ONLINE STORE" Foreground="#007ACC" FontSize="14" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,-5,0,30" />

                    <Border Background="#15FFFFFF" CornerRadius="15" Padding="20" BorderThickness="1" BorderBrush="#1AFFFFFF">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="SearchBox"
                                         Background="#0D1117" Foreground="White" FontSize="16" 
                                         Padding="15,12" BorderBrush="#33FFFFFF" BorderThickness="1"
                                         SelectionBrush="#007ACC" CaretBrush="White">
                                    <TextBox.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="10"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>

                                <TextBlock IsHitTestVisible="False" Text="Enter AppID..." 
                                           VerticalAlignment="Center" HorizontalAlignment="Left" 
                                           Margin="18,0,0,0" Foreground="#44FFFFFF" FontSize="16">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <Button x:Name="ButtonSearch" Content="Cloud Search" 
                                    Height="50" Style="{StaticResource ModernButtonStyle}" 
                                    Click="Button_Click">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                        <GradientStop Color="#007ACC" Offset="0"/>
                                        <GradientStop Color="#6A2B9A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </Border>

                    <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="11">
                        <Run Text="Tip:" Foreground="#007ACC" FontWeight="Bold"/>
                        <Run Text=" Use SteamDB to find the correct AppID." Foreground="#88FFFFFF"/>
                    </TextBlock>

                    <Button Content="Back to Menu" Margin="0,30,0,0" 
                            HorizontalAlignment="Center" Background="Transparent" 
                            Foreground="#55FFFFFF" BorderThickness="0" FontSize="12"
                            Cursor="Hand" Click="Button_Click_1"/>

                    <TextBlock Text="Powered by Kernelos.org" Foreground="#33FFFFFF" 
                               FontSize="9" HorizontalAlignment="Center" Margin="0,20,0,0" MouseDown="PowerKernel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>