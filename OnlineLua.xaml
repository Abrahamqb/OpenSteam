<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="OpenSteam.OnlineLua"
        Title="Online Lua Store" Height="480" Width="450"
        WindowStartupLocation="CenterOwner" Background="Transparent" 
        WindowStyle="None" 
        AllowsTransparency="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="GhostButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#44FFFFFF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,20,0,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.Resources>
            <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Grid.Effect>

        <Border x:Name="MainBorder" Background="#0F0F0F" CornerRadius="20" BorderThickness="1" BorderBrush="#33FFFFFF" ClipToBounds="True">
            <Border.OpacityMask>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Border Background="Black" CornerRadius="20" 
                                Width="{Binding ActualWidth, ElementName=MainBorder}" 
                                Height="{Binding ActualHeight, ElementName=MainBorder}"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>

            <Grid ClipToBounds="True">
                <Canvas IsHitTestVisible="False" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Ellipse Fill="#1A007ACC" Width="300" Height="300" Canvas.Left="-100" Canvas.Top="-100">
                        <Ellipse.Effect>
                            <BlurEffect Radius="80"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>

                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="STEAM LUA" Foreground="White" FontSize="32" FontWeight="ExtraBold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="15" Color="#007ACC" Opacity="0.5" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="ONLINE STORE" Foreground="#007ACC" FontSize="14" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,-5,0,30" />

                    <Border Background="#15FFFFFF" CornerRadius="15" Padding="20" BorderThickness="1" BorderBrush="#1AFFFFFF">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="SearchBox"
                                         Background="#0D1117" Foreground="White" FontSize="16" 
                                         Padding="15,12" BorderBrush="#33FFFFFF" BorderThickness="1"
                                         SelectionBrush="#007ACC" CaretBrush="White">
                                    <TextBox.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="10"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>

                                <TextBlock IsHitTestVisible="False" Text="Enter AppID..." 
                                           VerticalAlignment="Center" HorizontalAlignment="Left" 
                                           Margin="18,0,0,0" Foreground="#44FFFFFF" FontSize="16">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <Button x:Name="ButtonSearch" 
                                Height="50" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Click="Search_Click">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                        <GradientStop Color="#007ACC" Offset="0"/>
                                        <GradientStop Color="#6A2B9A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>

                                <Grid>
                                    <TextBlock x:Name="ButtonText" Text="Cloud Search" VerticalAlignment="Center"/>

                                    <ProgressBar x:Name="ButtonProgress" 
                                     IsIndeterminate="True" 
                                     Width="100" Height="4" 
                                     Visibility="Collapsed"
                                     Foreground="White" 
                                     Background="Transparent" 
                                     BorderThickness="0"/>
                                </Grid>
                            </Button>
                            
                            <Button x:Name="FixError" Content="Fix Error 6:0000065432" 
                            Height="34" Margin="0,10,0,0" Style="{StaticResource ModernButtonStyle}" 
                            Click="Fix65432" Width="197">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                        <GradientStop Color="#FFFF2E00" Offset="0"/>
                                        <GradientStop Color="Red" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </Border>

                    <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="11"><Run Text="Tip:" Foreground="#007ACC" FontWeight="Bold"/><Run Text=" "/><Run Text=" Use SteamDB to find the correct AppID." Foreground="#88FFFFFF"/></TextBlock>

                    <Button Content="Back to Menu" Margin="0,30,0,0" 
                            HorizontalAlignment="Center" Style="{StaticResource GhostButton}" BorderThickness="0" FontSize="12"
                            Cursor="Hand" Click="Back_Click"/>

                    <TextBlock Text="Powered by Kernelos.org" Foreground="#33FFFFFF" 
                               FontSize="9" HorizontalAlignment="Center" Margin="0,20,0,0" MouseDown="PowerKernel_Click" Cursor="Hand"/>
                </StackPanel>

                <Button x:Name="ExitButton" Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
         Width="45" Height="32" Style="{StaticResource ExitButtonStyle}" Click="ExitButton_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>