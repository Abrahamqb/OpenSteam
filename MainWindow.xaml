<Window x:Class="OpenSteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OpenSteam Manager" Height="480" Width="750"
        WindowStartupLocation="CenterScreen" Background="Transparent" 
        ResizeMode="NoResize" WindowStyle="None" MouseDown="Drag_MouseDown"
        AllowsTransparency="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True">

    <Window.Resources>
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#44FFFFFF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryAction" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#007ACC" Offset="0"/>
                        <GradientStop Color="#005A9E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerAction" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#44FF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4D2B2B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,20,0,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Grid.Effect>

        <Border x:Name="MainBorder" Background="#0F0F0F" CornerRadius="20" BorderThickness="1" BorderBrush="#33FFFFFF">
            <Border.OpacityMask>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Border Background="Black" CornerRadius="20" 
                                Width="{Binding ElementName=MainBorder, Path=ActualWidth}" 
                                Height="{Binding ElementName=MainBorder, Path=ActualHeight}"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>

            <Grid ClipToBounds="True">
                <Canvas IsHitTestVisible="False">
                    <Ellipse Fill="#1A007ACC" Width="400" Height="400" Canvas.Left="-150" Canvas.Top="-150">
                        <Ellipse.Effect>
                            <BlurEffect Radius="100"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <Ellipse Fill="#1A007ACC" Width="400" Height="400" Canvas.Right="-150" Canvas.Bottom="-150">
                        <Ellipse.Effect>
                            <BlurEffect Radius="100"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>

                <Button x:Name="ExitButton" Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="45" Height="32" Style="{StaticResource ExitButtonStyle}" Click="ExitButton_Click" />

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,1,0,0">
                    <Image Height="45" Width="49" Source="/8669e97b288da32670e77181618c3dfb.png"/>

                    <TextBlock Text="OPENSTEAM MANAGER" Foreground="White" FontSize="22" FontWeight="ExtraBold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="txtVersion" Text="v2.1 Beta | .NET 9 Edition | Abrahamqb" Foreground="#66FFFFFF" FontSize="10" HorizontalAlignment="Center" Margin="0,2,0,25"/>

                    <UniformGrid Columns="3" Width="470">
                        <Button x:Name="patchButton" Content="Patch" Style="{StaticResource PrimaryAction}" Height="45" Click="patchButton_Click"/>
                        <Button x:Name="DeletePatchButton" Content="Delete Patch" Style="{StaticResource DangerAction}" Height="45" Click="DeletePatchButton_Click"/>
                        <Button x:Name="ResetSteam" Content="Restart Steam" Style="{StaticResource ModernButtonStyle}" Background="#1E1E1E" Height="45" Click="ResetSteam_Click"/>
                        <Button x:Name="Plugins" Content="Millennium + Plugin" Style="{StaticResource ModernButtonStyle}" Background="#1E1E1E" Height="45" Click="Plugins_Click"/>
                        <Button x:Name="ManualLuaButton" Content="LuaLoader" Style="{StaticResource ModernButtonStyle}" Background="#1E1E1E" Height="45" Click="ManualLua_Click"/>
                        <Button x:Name="ExtraButton" Content="Extra" Style="{StaticResource ModernButtonStyle}" Background="#1E1E1E" Height="45" Click="Extra_Click"/>
                    </UniformGrid>

                    <Grid Width="470" Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="OnlineLua" Grid.Column="0" Content="⚡ OnlineLua Store" Style="{StaticResource PrimaryAction}" Height="50" Margin="6" Click="OnlineLua_Click">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                    <GradientStop Color="#007ACC" Offset="0"/>
                                    <GradientStop Color="#6A2B9A" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button x:Name="LuaManagerButton" Grid.Column="1" Content="Manager" Style="{StaticResource DangerAction}" Height="50" Margin="6" Click="LuaManager_Click">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                    <GradientStop Color="#FF4493FF" Offset="0"/>
                                    <GradientStop Color="#FF7D0BC1" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>

                    <Border Background="#0FFFFFFF" CornerRadius="8" Margin="0,30,0,0" Padding="15,8" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusDot" Fill="#00FF00" Width="8" Height="8" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ParcheEstado" Text="Status: System Ready" Foreground="#88FFFFFF" FontSize="11" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Button Content="Information" HorizontalAlignment="Center" Margin="0,148,0,0" VerticalAlignment="Top" Width="80" Style="{StaticResource GhostButton}" Click="Information_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>